#!/bin/sh
# Pre-push hook: runs all checks including tests
# Install with: make setup-hooks

set -e

echo "Running pre-push checks..."

# Check if we're in the right directory
if [ ! -f "Makefile" ]; then
    echo "Error: Makefile not found. Are you in the project root?"
    exit 1
fi

# Run pre-push target (includes pre-commit + tests)
make pre-push

echo "Pre-push checks passed."
