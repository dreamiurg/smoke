#!/bin/sh
# Pre-commit hook: runs formatting check, vet, and lint
# Install with: make setup-hooks

set -e

echo "Running pre-commit checks..."

# Check if we're in the right directory
if [ ! -f "Makefile" ]; then
    echo "Error: Makefile not found. Are you in the project root?"
    exit 1
fi

# Run pre-commit target
make pre-commit

echo "Pre-commit checks passed."
